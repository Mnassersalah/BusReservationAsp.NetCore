@model BusSystem.Models.Route

@{
    ViewData["Title"] = "Add Route";
}


<h1>Add Route</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">   
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PickUpID" class="control-label"></label>
                <select asp-for="PickUpID" class ="form-control" asp-items="ViewBag.PickUpID"></select>
            </div>
            <div class="form-group">
                <label asp-for="DropOffID" class="control-label"></label>
                <select asp-for="DropOffID" class="form-control" asp-items="ViewBag.DropOffID"></select>
                <span asp-validation-for="DropOffID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
