@model BusSystem.Models.Ticket

@{
    ViewData["Title"] = "Add Ticket";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/ResponsiveStyle.css" rel="stylesheet" />

<div class="container" style="min-height: 500px;">
    <div class="row">
        <div class="col-12">
            <h1>Add Ticket</h1>
        </div>
    </div>
    <div class="row">
        <form asp-action="Create">
            <div class="col-12">
                <div class="row">
                    <div class="col-12">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12 col-sm-2">
                                <label asp-for="PassengerCount" class="control-label"></label>
                            </div>
                            <div class="col-12 col-sm-6">
                                <input asp-for="PassengerCount" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <span asp-validation-for="PassengerCount" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12 col-sm-2">
                                <label asp-for="BookedSeats" class="control-label"></label>
                            </div>
                            <div class="col-12 col-sm-6">
                                <input asp-for="BookedSeats" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <span asp-validation-for="BookedSeats" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12 col-sm-2">
                                <label asp-for="ClientID" class="control-label"></label>
                            </div>
                            <div class="col-12 col-sm-6">
                                <select asp-for="ClientID" class="form-control" asp-items="ViewBag.ClientID"></select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <span asp-validation-for="ClientID" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12 col-sm-2">
                                <label asp-for="TripID" class="control-label"></label>
                            </div>
                            <div class="col-12 col-sm-6">
                                <select required id="trip" asp-for="TripID" class="form-control" asp-items="ViewBag.TripID">
                                    <option disabled selected>choose trip</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <span asp-validation-for="TripID" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-12">
                        <input type="submit" value="Create" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
